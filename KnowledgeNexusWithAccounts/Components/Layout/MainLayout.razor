@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row flex-column">
            <div class="search-container">
                <input type="text" placeholder="Search your favorite courses" @bind="searchTerm">
                <button @onclick="SearchCourses">Search</button>
                <!-- Include dropdowns for additional filters if needed -->
            </div>
            <br />
            <div class="filter-container">
                @foreach (var filter in filters)
                {
                    <select @onchange="e => SetFilter(filter.Key, e.Value?.ToString())">
                        <option value="">@filter.Key</option>
                        @foreach (var option in filter.Value)
                        {
                            <option value="@option">@option</option>
                        }
                    </select>
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>